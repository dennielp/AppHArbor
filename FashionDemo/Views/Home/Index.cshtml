@using FashionDemo.Models
@model IEnumerable<MasterProduct>

<script type="text/javascript">
    $(function () {
        $('#loadingElement').ajaxStart(function () {
            $('#products-list').css('opacity', 0.5);
        }).ajaxComplete(function () {
            $('#products-list').css('opacity', 1.0);
            bindChildsTable();
        });

        $('div.addBtn').click(function () {
            $('#addMasterProductBtn').click();
        });

        $('select').selectbox({
            effect: 'slide'
        });
        $('#dialog').dialog({
            modal: true,
            autoOpen: false,
            show: 'fade',
            hide: 'fade',
            resizable: false,
            width: 450,
            title: '<img id="dialogTitleImg" src="/Content/images/dialog_title.png" />'
        });
        $('#dialog input[type="submit"]').click(function () {
            $('#dialog').dialog('close');
        });
        $('#addMasterProduct').click(function () {
            $('#dialog').dialog('open');
        });

        $('#editMasterBtn').click(function () {
            if ($('div.edit-child').is(':visible')) {
                $(this).html('Cancel edit');
            }
            else {
                $(this).html('Edit master');
            }


            toggleEditArea();
        });

        $('.table-container tr').click(function () {

            var id = $(this).find('td:first-of-type').attr('id');
            $('#hdnChildId').val(id);
            $('#masterId').val($(this).find('td:first-of-type').text());
            selectProduct(id);
            fillEditFields(id);
        });

        //deleting child
        $('.edit-child #delBtn').click(function () {
            if (checkSelected()) {
                deleteProduct();
            }
        });

        //saving child product changes
        $('.edit-child #saveBtn').click(function () {
            if (checkSelected()) {
                saveChildChanges();
            }
        });

        //saving master product changes
        $('#saveMasterChanges').click(function () {
            if (checkSelected()) {
                $('#submitSaveMaster').click();
            }
        });

        //delete master product
        $('#delMasterBtn').click(function () {
            if (checkSelected()) {
                $.getJSON("/Home/DeleteMaster?id=" + $('.edit-master #masterId').val(), function() {
                });
            }
        });

    });

    function checkSelected() {
        if ($('tr.tr-selected').length > 0) {
            return true;
        }
        else {
            alert('Please choose any product first');
        }
        return false;
    }

    function saveChildChanges() {
        var prodId = $(this).find('td:first-of-type').attr('id');
        $('#submitSaveChild').click();

    }
    
    function deleteProduct() {
        var $trToDelete = $('tr.tr-selected');
        var id = $trToDelete.find('td:first-of-type').attr('id');
        $.getJSON("/Home/DeleteProduct?id=" + id, function () {
            $trToDelete.fadeOut(500);
        });
    }
    
    function fillEditFields(id) {
        $.getJSON("/Home/GetProductById?id=" + id, function (data) {
            $('#txtEditPrice').val(data.Price);
            $('#txtEditQuantity').val(data.Quantity);
            $('#editLabelDiv a.sbSelector').html(data.Label);
            $('#editTypeDiv a.sbSelector').html(data.Type);
            $('.edit-master #name').val(data.Name);
        });
    }
    function selectProduct(productId) {
        $('tr.tr-selected').removeClass('tr-selected');
        $('td[id="' + productId + '"]').parent('tr').addClass('tr-selected');
    }
    
    var $child, $master;

    function toggleEditArea() {
        $child = $('div.edit-child');
        $master = $('div.edit-master');
        if ($child.is(':animated')) {
            $child.stop();
            showMaster();
        }
        else if ($master.is(':animated')) {
            $master.stop();
            showChild();
        }
        else {
            if ($child.is(':visible')) {
                showMaster();
            }
            else {
                showChild();
            }
        }
    }

    function showMaster() {
        $child.fadeOut(200, function () {
            $master.animate({
                height: 450
            }, 500);
        });
    }

    function showChild() {
        $master.animate({
            height: 250
        }, 500, function () {
            $child.fadeIn(200);
        });
    }

    function updateRow() {
        var $row = $('tr.tr-selected');
        $row.find('td.price').html($('.edit-child #txtEditPrice').val());
        $row.find('td.quantity').html($('.edit-child #txtEditQuantity').val());
    }

    

</script>


<div id="myImageFlow" class="imageflow border-bottom-gray" style="height: 200px;">
   
        @foreach (var img in ViewBag.images)
        {
            <img src="@Url.Content(img)" alt="Image 1" class="imgFlow" />    
        }
</div>

<div class="leftColumn floatLeft">

    <div class="blackBar">
        <div class="blackBar-imageDiv">
            <img src="/Content/images/inventory_label.png"/>
        </div>
        
        <div class="clear"></div>
    </div>

    <div style="display: none;">
    @using (Html.BeginForm("Search", "Home"))
    {
        @Html.TextBox("searchFor")
        <input type="submit" value="Search" />
    }
        @using (Html.BeginForm("UploadImage", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
    <input type="file" name="file"/>
    <input type="submit" value="Upload file" />
        }
</div>
    
     <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Label</th>
                    <th>Type</th>
                    <th>Size</th>
                    <th>Price</th>
                    <th>Quantity</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var master in Model)
                {
                    foreach (var product in master.Products)
                    {                        
                        <tr>
                            <td id="@product.ProductId">@product.CodeName</td>
                            <td class="name">@product.MasterProduct.Name</td>
                            <td class="label">@product.MasterProduct.Label</td>
                            <td class="type">@product.MasterProduct.Type</td>
                            <td class="size">@product.Size</td>
                            <td class="price">@product.Price</td>
                            <td class="quantity">@product.Quantity</td>
                        </tr>
                    }
                }
                
            </tbody>
        </table>
     </div>  
    
</div>
<div class="rightColumn floatLeft">
    <div class="blackBar">
        <div class="floatRight" id="addMasterProduct">
            <a href="#"><img src="/Content/images/add_new_button.png"/></a>
        </div>
    </div>
    <div class="editArea">

        <div class="edit-master">
